{
  "version": 2,
  "builds": [
    {
      "src": "api/refresh.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/training.json",
      "dest": "/api/refresh.py"
    }
  ],
  "crons": [
    {
      "path": "/api/refresh.py",
      "schedule": "0 20 * * *"
    }
  ],
  "headers": [
    {
      "source": "/training.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate"
        }
      ]
    }
  ]
} 